{
  "extends": "eslint:all",
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "it": true,
    "require": true,
    "__dirname": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "no-sync": 0,
    "sort-keys": 0,
    "comma-dangle": ["error", "always-multiline"],
    "quote-props": 0,
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
    "require-jsdoc": 0,
    "init-declarations": 0,
    "one-var": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "class-methods-use-this": 0,
    "indent": [0,2],
    "space-before-function-paren": ["error", "never"],
    "padded-blocks": ["error", "never"],
    "no-console": 0,
    "newline-after-var": 0,
    "newline-before-return": 0,
    "id-length": 0,
    "sort-imports": 0,
    "keyword-spacing": ["error", { "before": true, "after": true }]
  }
}